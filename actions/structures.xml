<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension SYSTEM "../../tao/doc/structures.dtd">
<structures>
	<structure id="wfauthoring" name="Processes" level="6" visible="true">
		<description>Build processes to drive activities into a workflow.</description>
		<sections>
			<section id="manage_process" name="Manage processes" url="/wfAuthoring/Process/index">
				<trees>
					<tree name="Processes library"
						className="Process"
						dataUrl="/wfAuthoring/Process/getOntologyData"
						editInstanceUrl="/wfAuthoring/Process/editProcess"
						addInstanceUrl="/wfAuthoring/Process/addInstance"
						deleteUrl="/wfAuthoring/Process/delete"
						editClassUrl="/wfAuthoring/Process/editProcessClass"
					/>
				</trees>
				<actions>
					<action name="search" url="/wfAuthoring/Process/search" context="*" />
					<action name="new process" js="generisActions.instanciate" url="/wfAuthoring/Process/addInstance" context="class" />
					<action name="delete" js="generisActions.removeNode" url="/wfAuthoring/Process/delete" context="resource" />
					<action name="meta data" js="generisActions.loadMetaData" url="/wfAuthoring/Process/getMetaData"  context="instance" />
					<action name="create table" js="generisActions.resultTable" url="/taoResults/LegacyResults/createTable"  context="class" />
					<action name="export" url="/tao/Export/index"  context="*" />
				</actions>
			</section>

			<section id="process_authoring" name="Process authoring" url="/wfAuthoring/Process/authoring" />

			<section id="monitor_process" name="Monitor processes" url="/wfAuthoring/Monitor/index" />

			<section id="manage_roles" name="Manage roles" url="/wfAuthoring/Role/index">
				<trees>
					<tree name="Roles library"
						className="Role"
						dataUrl="/wfAuthoring/Role/getOntologyData"
						editInstanceUrl="/wfAuthoring/Role/editRole"
						addInstanceUrl="/wfAuthoring/Role/addInstance"
						deleteUrl="/wfAuthoring/Role/delete"
						editClassUrl="/wfAuthoring/Role/editRoleClass"
					/>
				</trees>
				<actions>
					<action name="search" url="/wfAuthoring/Role/search" context="*" />
					<action name="new role" js="generisActions.instanciate" url="/wfAuthoring/Role/addInstance" context="class" />
					<action name="delete" js="generisActions.removeNode" url="/wfAuthoring/Role/delete" context="resource" />
					<action name="meta data" js="generisActions.loadMetaData" url="/wfAuthoring/Role/getMetaData"  context="instance" />
					<action name="create table" js="generisActions.resultTable" url="/taoResults/LegacyResults/createTable"  context="class" />
					<action name="export" url="/tao/Export/index"  context="*" />
				</actions>
			</section>

			<section id="list_users" name="Manage users" url="/wfAuthoring/Users/index" />
			<section  id="add_user" name="Add a user" url="/wfAuthoring/Users/add" />
			<section  id="edit_user" name="Edit a user" url="/wfAuthoring/Users/edit" />
		</sections>
	</structure>
</structures>